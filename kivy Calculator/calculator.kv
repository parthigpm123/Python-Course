#:kivy 2.1.0

<Button>:
    background_normal: ''
    background_color: (40/255, 40/255, 40/255, 1)  # default dark gray
    color: (1, 1, 1, 1)  # white text
    font_size: 32

<CalculatorWidget>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input_box
            text: "0"
            font_size: 43
            multiline: False
            halign: "right"
            readonly: True
            size_hint_y: 0.2
            background_color: (20/255, 20/255, 30/255, 1)
            foreground_color: (1, 1, 1, 1)

        GridLayout:
            cols: 4
            rows: 5
            size_hint_y: 0.8
            spacing: 5
            padding: 5

            # Row 1
            Button:
                text: "%"
                on_press: root.signs("%")
            Button:
                text: "C"
                background_color: (255/255, 140/255, 0/255, 1)  # orange
                on_press: root.clear()
            Button:
                text: u"\u2190"   # ← Backspace
                background_color: (255/255, 140/255, 0/255, 1)
                on_press: root.remove_last()
            Button:
                text: "/"
                background_color: (14/255, 73/255, 176/255, 1)  # blue
                on_press: root.signs("/")

            # Row 2
            Button:
                text: "7"
                on_press: root.button_value(7)
            Button:
                text: "8"
                on_press: root.button_value(8)
            Button:
                text: "9"
                on_press: root.button_value(9)
            Button:
                text: "×"
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs("*")

            # Row 3
            Button:
                text: "4"
                on_press: root.button_value(4)
            Button:
                text: "5"
                on_press: root.button_value(5)
            Button:
                text: "6"
                on_press: root.button_value(6)
            Button:
                text: "-"
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs("-")

            # Row 4
            Button:
                text: "1"
                on_press: root.button_value(1)
            Button:
                text: "2"
                on_press: root.button_value(2)
            Button:
                text: "3"
                on_press: root.button_value(3)
            Button:
                text: "+"
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs("+")

            # Row 5
            Button:
                text: "+/-"
                background_color: (255/255, 140/255, 0/255, 1)
                on_press: root.positive_negative()
            Button:
                text: "0"
                on_press: root.button_value(0)
            Button:
                text: "."
                on_press: root.dot()
            Button:
                text: "="
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.results()
